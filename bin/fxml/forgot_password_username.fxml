<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" prefWidth="350.0" style="-fx-background-color: #F9F9F9; -fx-padding: 30;"
      xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21"
      fx:controller="com.palveo.gui.controller.ForgotPasswordUsernameController">
    <children>
        <Label text="Forgot Password" textFill="#212121">
            <font>
                <Font name="System Bold" size="20.0"/>
            </font>
            <VBox.margin>
                <Insets bottom="10.0"/>
            </VBox.margin>
        </Label>
        <Label text="Enter your username to proceed." textFill="#424242">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <TextField fx:id="usernameField" promptText="Username" style="-fx-pref-height: 40px; -fx-font-size: 14px; -fx-background-color: #FFFFFF; -fx-border-color: #EEEEEE; -fx-border-width: 1px; -fx-border-radius: 4px; -fx-prompt-text-fill: #AAAAAA;"/>
        <Button fx:id="nextButton" text="Next" onAction="#handleNextButtonAction" prefWidth="270.0" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-height: 40px; -fx-background-radius: 6px;">
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </Button>
        <Button fx:id="backToLoginButton" text="Back to Login" onAction="#handleBackToLoginAction" prefWidth="270.0" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-height: 35px; -fx-background-radius: 6px;">
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </Button>
    </children>
</VBox>